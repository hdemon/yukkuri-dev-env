{
  "name": "webserver",
  "default_attributes": {
    "tz": "Asia/Tokyo"
  },
  "override_attributes": {
    "mysql": {
      "client": {
        "packages": ["mysql-client", "libmysqlclient-dev"]
      }
    },
    "rbenv": {
      "user": "yukkuri",
      "group": "yukkuri",
      "group_users": ["yukkuri"],
      "install_prefix": "/home/yukkuri",
      "version": "2.1.0-rc1"
    }
  },
  "json_class": "Chef::Role",
  "description": "All server common configuration",
  "chef_type": "role",
  "run_list": [
    "mysql::client",
    "mysql::server",
    "mysql-ruby",
    "configure-mysql"
  ]
}
